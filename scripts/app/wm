#!/usr/bin/env bash
# vim: filetype=sh
set -uo pipefail

source $DOTFILES/scripts/core/main.sh 

##? Manager window-manager-related features
 #? 0.1.0
##?
##? Usage:
##?    wm (start|stop|toggle|restart)

eval_docopts "$@"

if $toggle; then
  if ps aux | grep -q "[/]bin/khd"; then
    start=false
    stop=true
  else
    start=true
    stop=false
  fi
elif $restart; then
  start=true
  stop=true
fi

if $stop; then
  ps aux | grep -ie "[b]ersicht" | awk '{print $2}' | xargs kill -9 2> /dev/null
  brew services stop crisidev/chunkwm/chunkwm
  brew services stop khd
fi

if $start; then
  brew services restart khd || brew services start khd
  brew services restart crisidev/chunkwm/chunkwm || brew services start crisidev/chunkwm/chunkwm
  open "/Applications/Ãœbersicht.app"
fi