#!/usr/bin/env bash
# vim: filetype=sh
set -euo pipefail

source "${DOTFILES}/scripts/core/main.sh"

##? Shows network info
#?? 0.1.0
##?
##? Usage:
##?    info ip [--fast]
##?    info traffic
##?
##? Options:
##?     --fast   Fast response with the external IP only

docs::eval "$@"

traffic::get() {
   netstat -w1 &
   sleep 1.5
   kill $!
}

if $ip; then
   $fast \
      && dig +short myip.opendns.com @resolver1.opendns.com \
      || curl -s ifconfig.me/all.json | jq
elif $traffic; then
   traffic::get | tail -n1 | awk '{print $3 " " $6}'
fi
