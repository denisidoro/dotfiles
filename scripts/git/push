#!/usr/bin/env bash

source "${DOTFILES}/scripts/git/aux/core.sh"

##? Git push helpers
##?
##? Usage:
##?    push upstream <args>...
##?    push lint <args>...
##?    push commit <args>...

doc::maybe_help "$@"

_should_use_arc() {
   cd "$(git::root)" || exit
   cat .git/config | grep -q gitolite
}

_upstream() {
   local -r branch="$(git rev-parse --abbrev-ref HEAD)"
   if _should_use_arc; then
      arc diff --message "$(git log -1 --pretty=%B)" --nounit
   else
      git push -u origin "$branch"
   fi
}

_commit_first() {
   git add .
   dot git commit am "$@"
   _upstream
}

cmd="$1"
shift

case $cmd in
   commit) _commit_first "$@" ;;
   upstream) _upstream "$@" ;;
esac
