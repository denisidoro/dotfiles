#!/usr/bin/env bash
set -euo pipefail

source "${DOTFILES}/scripts/core/main.sh"

##? JSON navigator
##?
##? Usage:
##?    nav2
##?
##? Examples:
##?    cat my.json | nav2

doc::maybe_help "$@"

_fzf() {
    local -r preview='i={}; echo "$i" | grep -q "^. = " && q="." || q="$(echo "$i" | sed -E "s|(\.[^ ]+).*|\1|")"; cat "'"$1"'" | jq -C "$q"'
    fzf --ansi --exact --preview "$preview"
}

_input() {
    printf '.'
    echo "$1" | gron -c 
}

_pretty() {
     sed 's|json||' \
        | sed '/^\./! s/.*/\.&/'
}

main() {
    local -r content="$(cat)"
    local -r temp_file=$(mktemp)
    trap "rm -f $temp_file" 0 2 3 15
    echo "$content" > "$temp_file"
    _input "$content" | _pretty | _fzf "$temp_file" 
}

main "$@"