#!/usr/bin/env bash
set -euo pipefail

##? Apply lint and fmt fixes
##?
##? Usage:
##?    fix 

source "${DOTFILES}/scripts/rust/aux/proj.sh"

docs::eval_help "$@"

cd "$PROJ_HOME"

header "Cargo nighly fix..."
cargo +nightly clippy --fix -Z unstable-options || true

header "Cargo fix..."
cargo fix || true

header "Cargo fmt..."
cargo fmt || true

header "dot code beautify..."
find scripts -type f | xargs -I% dot code beautify % || true
dot code beautify "${PROJ_HOME}/alfred/alfred.bash" || true
dot code beautify "${PROJ_HOME}/alfred/alfred2.bash" || true
dot code beautify "${PROJ_HOME}/tests/core.bash" || true
dot code beautify "${PROJ_HOME}/tests/run" || true

header "clippy..."
cargo clippy || true
