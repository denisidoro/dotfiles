#!/usr/bin/env bash
set -euo pipefail

source "${DOTFILES}/scripts/core/main.sh"

##? Helpers for using dot in other projects
##?
##? Usage:
##?    scripting eval [<args>...]
##?    scripting test <folder> [<args>...]

docs::eval_help "$@"

cmd="$1"
shift

_test() {
   source "${DOTFILES}/scripts/core/test.sh"
   test::start "$@"
}

case $cmd in
   eval) eval "$@" ;;
   test) _test "$@" ;;
   *) docs::invalid "$cmd" "$@" ;;
esac
