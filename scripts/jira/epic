#!/usr/bin/env bash
set -uo pipefail

source "${DOTFILES}/scripts/core/main.sh"
source "${DOTFILES}/scripts/core/str.sh"

##? JIRA epic helpers
##?
##? Usage:
##?    epic graph
##?
##? Examples:
##?    cat epic.xml | epic graph > epic.dot

doc::parse "$@"

json_to_dot() {
   node "${DOTFILES}/repos/jira-epic/index.js"
}

main() {
   npx xml2json | json_to_dot
}

main "$@"