#!/usr/bin/env bash

source "${DOTFILES}/scripts/kafka/aux/core.sh"

##? Zookeeper helpers
#?? 0.1.0
##?
##? Usage:
##?    zookeeper

docs::eval_help "$@"

case $1 in
   "migration") bin="zookeeper-security-migration" ;;
   "start")
      bin="zookeeper-server-start"
      if [ "$#" -eq 1 ]; then
         arg="$KAFKA_HOME/config/zookeeper.properties";
      fi
      ;;
   "stop") bin="zookeeper-server-stop" ;;
   "shell") bin="zookeeper-shell" ;;
   *) kafka::invalid "$@" ;;
esac

kafka::call "$bin" "$@" "$arg"
