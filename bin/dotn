#!/usr/bin/env bash
# vim: filetype=sh
set -euo pipefail

export DOTFILES="${DOTFILES:-$(cd "$(dirname "${BASH_SOURCE[0]}")/.." >/dev/null && pwd)}"

##? A hub for an all-purpose set of scripts, using navi
##?
##? Usage:
##?    dot <context> <cmd> [<args>...]

NAVI_PATH="${DOTFILES}/cheats" navi best "${@:-}"