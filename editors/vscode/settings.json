{
    "window.zoomLevel": 1,
    "editor.fontSize": 12,
    "editor.letterSpacing": 0.2,
    "editor.lineHeight": 18,
    
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    
    "files.autoSave": "onFocusChange",
    "files.trimFinalNewlines": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "explorer.sortOrder": "default",
    
    "materialTheme.accent": "Remove accents",
    "workbench.colorCustomizations": {},
    "workbench.colorTheme": "Material Theme Darker",
    
    "breadcrumbs.enabled": true,
    "workbench.activityBar.visible": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.list.keyboardNavigation": "simple",

    "gitlens.blame.heatmap.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.hovers.annotations.enabled": false,
    "gitlens.keymap": "none",
    "gitlens.menus": false,
    "gitlens.mode.statusBar.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.views.compare.enabled": false,
    "gitlens.views.fileHistory.enabled": false,
    "gitlens.views.lineHistory.enabled": false,
    "gitlens.views.repositories.enabled": false,
    "gitlens.views.search.enabled": false, 

    "editor.fontLigatures": true,

    "keyboard.touchbar.enabled": true,

    "go.autocompleteUnimportedPackages": true,
    "go.toolsEnvVars": {
        "GO111MODULE": "off"
    },
    "go.useLanguageServer": false,
    "go.languageServerFlags": ["-enhance-signature-help"],
    "go.languageServerExperimentalFeatures": {
        "format": true,
        "autoComplete": true,
        "rename": true,
        "goToDefinition": true,
        "hover": true,
        "signatureHelp": true,
        "goToTypeDefinition": true,
        "goToImplementation": true,
        "documentSymbols": true,
        "workspaceSymbols": true,
        "findReferences": true
    },
    
    "files.exclude": {
        "**/.git": true,        
        "**/.DS_Store": true,  
        "**/node_modules": true,
        "**/.gen": true,
        "**/gen": true,
        "**/.glue": true,
        "**/.tmp": true,
        "**/vendor": true,
        "**/go-build": true,
        "bazel-*": true,
        "pkg*": true
    },

    "files.watcherExclude": {
        "bazel-*": true,
        "pkg*": true
    },

    "files.associations": {
        "*.cheat": "shellscript",
        "*rc": "shellscript",
        "*.arc*": "jsonc",
        "*.eslintrc": "jsonc",
        "*.envrc": "shellscript"
    },
    
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,
    
    "vim.leader": "<space>",
    "vim.easymotion": false,
    "vim.replaceWithRegister": true,
    "vim.sneak": false,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,

    "vim.visualModeKeyBindings": [ 

        {"before":   ["<leader>", "<space>"], 
         "after":    [], 
         "commands": [{"command": "workbench.action.showCommands", "args": []}]}, 

        {"before":   ["<leader>", ";", ";"], 
         "after":    [], 
         "commands": [{"command": "editor.action.commentLine", "args": []}]}, 

        {"before":   ["<leader>", "j", "="], 
         "after":    [], 
         "commands": [{"command": "editor.action.format", "args": []}]}], 
       
    "vim.visualModeKeyBindingsNonRecursive": [     

        {"before":   ["j"], 
         "after":    ["g", "j"]},

        {"before":   ["k"], 
         "after":    ["g", "k"]}],

