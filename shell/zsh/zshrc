#!/usr/bin/env zsh

# dotfiles
export DOTFILES="${DOTFILES:-"${HOME}/dotfiles"}"

# register which shell is running
PROFILE_SHELL="zsh"

# load vars
source "${DOTFILES}/shell/aux/vars.bash"

# load helper functions
source "${DOTFILES}/shell/aux/core.bash"

# load aliases
source "${DOTFILES}/shell/aliases/core.bash"

# on directory change
dns_chpwd() {
   fre --add "$PWD" # register for jump/fasd
}
typeset -gaU chpwd_functions
chpwd_functions+=dns_chpwd

# history
setopt HIST_IGNORE_ALL_DUPS

# theme
source "${DOTFILES}/shell/themes/core.zsh"

# Initialize modules
export ZIM_HOME="${DOTFILES}/modules/zimfw"
[[ ${ZIM_HOME}/init.zsh -ot ${ZDOTDIR:-${HOME}}/.zimrc ]] && source ${ZIM_HOME}/zimfw.zsh init -q
source ${ZIM_HOME}/init.zsh

# load bindings
source "${DOTFILES}/shell/zsh/bindings/editing.zsh"
source "${DOTFILES}/shell/zsh/bindings/navi.zsh"
source "${DOTFILES}/shell/zsh/bindings/zim.zsh"
source "${DOTFILES}/shell/zsh/bindings/fzf.zsh"

# load local custom config
source "${DOTFILES}/local/zshrc" # 2> /dev/null || true
