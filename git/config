[core]
  excludesfile = ~/dotfiles/git/ignore
  hookspath = ~/dotfiles/git/hooks
  autocrlf = input
  ignorecase = false
	editor = $EDITOR
	pager = $PAGER
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space
	untrackedCache = true
  pager = delta

[branch]
	autosetuprebase = always

[rerere]
	enabled = true

[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse
	side-by-side = true

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none

[push]
  default = current

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

# [interactive]
#   diffFilter = delta --color-only
# 
# [color "diff"]
#   meta = yellow bold
#   frag = magenta bold # line info
#   old = red # deletions
#   new = green # additions

[diff]
    tool = kitty
    guitool = kitty.gui

[difftool]
    prompt = false
    trustExitCode = true

[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[apply]
	whitespace = error

[grep]
	linenumber = true
	patterntype = perl

[column]
	ui = auto
	tag = never

[alias]
  fuck = fsck

[fetch]
  prune = true

[rebase]
  autosquash = true
  autoStash = true

[include]
  path = ~/dotfiles/local/gitconfig

[pull]
  rebase = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[url "git@github.com:"]
	insteadOf = "g:"
	pushInsteadOf = "g:"

[url "git@gist.github.com:"]
	insteadOf = "gist:"
	pushInsteadOf = "gist:"

[url "git@github.com:denisidoro/"]
	insteadOf = "my:"

[credential]
	helper = ""
	helper = manager-core
