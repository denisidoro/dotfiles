[core]
  excludesfile = ~/dotfiles/git/ignore
  hookspath = ~/dotfiles/git/hooks
  autocrlf = input
  ignorecase = false
	editor = $EDITOR
	pager = $PAGER
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[push]
  default = current

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold # line info
  old = red # deletions
  new = green # additions

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[apply]
	whitespace = error

[grep]
	linenumber = true
	patterntype = perl

[column]
	ui = auto
	tag = never

[alias]
  fuck = fsck

[fetch]
  prune = true

[rebase]
  autosquash = true
  autoStash = true

[include]
  path = ~/dotfiles/local/gitconfig

[pull]
  rebase = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[url "git@github.com:"]
	insteadOf = "g:"
	pushInsteadOf = "g:"

[url "git@gist.github.com:"]
	insteadOf = "gist:"
	pushInsteadOf = "gist:"

[url "git@github.com:denisidoro/"]
	insteadOf = "my:"
[url "ssh://code.uber.internal/"]
	insteadOf = https://code.uber.internal/
[url "ssh://config.uber.internal/"]
	insteadOf = https://config.uber.internal/
[credential "https://git.uberinternal.com"]
	helper = usso
[credential "https://vfs4g-cache.uberinternal.com"]
	helper = usso
[http "https://gopkg.uberinternal.com"]
	followRedirects = true
[http "https://gopkg.in"]
	followRedirects = true
